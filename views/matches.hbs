<div class="displays">
  {{#each match}}
  <fieldset class="matches-display" data-filter="{{#if this.isLive}}Live{{/if}}{{#if this.isFinished}}Finished{{/if}}{{#unless this.isFinished}}{{#unless this.isLive}}Upcoming{{/unless}}{{/unless}}">
    <div style="display: flex;justify-content: space-between;">
      <div class="display-title">
      Patras League Playoffs Match # {{this.id}}
    </div>
    {{#if this.isLive}}<h4 style="color: red;line-height:0.1"> â€¢ Live </h4>{{/if}}
    {{#if this.isFinished}}<h4 style="color: grey;line-height:0.1"> Finished </h4>{{/if}}
    {{#unless this.isFinished}}{{#unless this.isLive}}<h4 style="color: black;line-height:0.1"> Upcoming </h4>{{/unless}}{{/unless}}
    
    
    </div>
    
    <div class="flexbox">
      <div style="align-self:center">
        <div class="event-time">{{this.date}}</div>
        <br>
        <div class="event-time" style="text-align:center">{{this.time}}</div>
      </div>
      
      <div class="info">
        <div class="team">
          <img class="team-logo" src="{{this.team1.logo}}" width="20" height="20">
          <div class="event-team">{{this.team1.name}}</div>
          <div class="event-score">-&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;(-)</div>
        </div>
        <div class="team">
          <img class="team-logo" src="{{this.team2.logo}}" width="20" height="20">
          <div class="event-team">{{this.team2.name}}</div>
          <div class="event-score">-&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;(-)</div>
        </div>
      </div>
    </div>
  </fieldset>
  {{/each}}
</div>
